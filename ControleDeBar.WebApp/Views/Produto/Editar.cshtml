@{
    ViewBag.Titulo = "Edição de Produtos";
}

@model EditarProdutoViewModel;

<div class="row justify-content-center">
    <form class="col-6" asp-action="Editar" method="post">
        <div class="mb-3">
            <label asp-for="Nome" class="form-label">Nome</label>
            <input class="form-control" asp-for="Nome">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Valor" class="form-label">Valor</label>
            <input class="form-control" asp-for="Valor">
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2 justify-content-end">
            <a asp-action="Index" class="btn btn-outline-primary px-5">Voltar</a>
            <button class="btn btn-primary px-5">Gravar</button>
        </div>
    </form>
</div>